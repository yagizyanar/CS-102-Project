<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="panelRoot"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.edutrack.controller.NotificationController"
            style="-fx-background-color: #f5f5f5;">

    <children>
        <VBox spacing="0"
              AnchorPane.topAnchor="0.0"
              AnchorPane.rightAnchor="0.0"
              AnchorPane.bottomAnchor="0.0"
              AnchorPane.leftAnchor="0.0">

            <HBox alignment="CENTER_LEFT" spacing="20"
                  style="-fx-background-color: white;
                         -fx-padding: 20;
                         -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                <children>
                    <Label text="Notifications" textFill="#2aa2d8">
                        <font>
                            <Font name="System Bold" size="24"/>
                        </font>
                    </Label>

                    <Region HBox.hgrow="ALWAYS"/>

                    <Button fx:id="btnClose" text="âœ•" onAction="#closePanel"
                            style="-fx-background-color: #f1f1f1; 
                                   -fx-background-radius: 10;
                                   -fx-font-size: 16px;
                                   -fx-font-weight: bold;
                                   -fx-cursor: hand;
                                   -fx-padding: 10 15;"/>
                </children>
            </HBox>

            <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS"
                        style="-fx-background: transparent; 
                               -fx-background-color: transparent;">
                <content>
                    <VBox spacing="0" alignment="TOP_CENTER">
                        <padding>
                            <Insets top="40" right="40" bottom="40" left="40"/>
                        </padding>

                        <VBox fx:id="listBox" spacing="15" maxWidth="800" 
                              style="-fx-background-color: white;
                                     -fx-background-radius: 16;
                                     -fx-padding: 20;
                                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.08), 10, 0, 0, 2);">
                        </VBox>
                    </VBox>
                </content>
            </ScrollPane>

        </VBox>
    </children>
</AnchorPane>
