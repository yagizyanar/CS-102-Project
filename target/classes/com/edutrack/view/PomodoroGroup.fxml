<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane alignment="CENTER" prefHeight="900.0" prefWidth="1920.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.edutrack.controller.PomodoroController">
   <children>
      <ImageView fitHeight="1080.0" fitWidth="1920.0" preserveRatio="false">
         <image>
            <Image url="@background.png" />
         </image>
      </ImageView>
      
      <VBox alignment="TOP_CENTER" maxWidth="1200.0" prefHeight="750.0" prefWidth="1200.0" 
            style="-fx-background-color: #ffffff; -fx-background-radius: 20;">
         <StackPane.margin>
            <Insets bottom="30.0" top="30.0" />
         </StackPane.margin>
         <padding>
            <Insets top="40.0" left="50.0" right="50.0" bottom="40.0"/>
         </padding>
         
         <children>
            <!-- Title -->
            <Label text="Group Study Session" style="-fx-text-fill: #59B5E0;">
               <font>
                  <Font name="System Bold" size="32.0" />
               </font>
            </Label>
            
            <!-- Timer Display -->
            <Label fx:id="timerLabel" text="25:00" style="-fx-text-fill: #333;">
               <font>
                  <Font size="72.0" />
               </font>
               <VBox.margin>
                  <Insets top="30.0" bottom="10.0"/>
               </VBox.margin>
            </Label>
            
            <!-- Phase Label -->
            <Label fx:id="phaseLabel" text="Study Time" style="-fx-text-fill: #666; -fx-font-size: 18;"/>
            
            <!-- Ready Count -->
            <Label fx:id="readyCountLabel" text="0/0 Ready" style="-fx-text-fill: #59B5E0; -fx-font-size: 16; -fx-font-weight: bold;">
               <VBox.margin>
                  <Insets top="20.0"/>
               </VBox.margin>
            </Label>
            
            <!-- Group Status -->
            <Label fx:id="groupStatusLabel" text="Waiting for members to be ready..." style="-fx-text-fill: #888; -fx-font-size: 14;">
               <VBox.margin>
                  <Insets top="5.0" bottom="20.0"/>
               </VBox.margin>
            </Label>
            
            <!-- Members List -->
            <Label text="Group Members" style="-fx-font-weight: bold; -fx-font-size: 16; -fx-text-fill: #333333;">
               <VBox.margin>
                  <Insets top="10.0"/>
               </VBox.margin>
            </Label>
            
            <ScrollPane fitToWidth="true" prefHeight="200.0" style="-fx-background: transparent; -fx-background-color: transparent;">
               <content>
                  <VBox fx:id="membersListBox" spacing="8.0" style="-fx-padding: 10;">
                  </VBox>
               </content>
               <VBox.margin>
                  <Insets top="10.0"/>
               </VBox.margin>
            </ScrollPane>
            
            <!-- Buttons -->
            <HBox alignment="CENTER" spacing="30.0">
               <VBox.margin>
                  <Insets top="30.0"/>
               </VBox.margin>
               <children>
                  <Button fx:id="readyButton" text="Ready" onAction="#toggleReady"
                          style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-background-radius: 20; -fx-padding: 10 30; -fx-font-size: 14;"/>
                  
                  <Button text="Timer Settings" onAction="#openSettingsFromGroup"
                          style="-fx-background-color: #59B5E0; -fx-text-fill: white; -fx-background-radius: 20; -fx-padding: 10 25;"/>
                  
                  <Button text="Back" onAction="#backToStartPomodoro"
                          style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-background-radius: 20; -fx-padding: 10 25;"/>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</StackPane>
