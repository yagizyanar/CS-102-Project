<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>

<StackPane xmlns="http://javafx.com/javafx/25"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.edutrack.controller.BadgesController"
           fx:id="badgesOverlayRoot"
           prefWidth="1200.0"
           prefHeight="680.0">

    <children>

        <Pane prefWidth="1200.0" prefHeight="680.0"
              style="-fx-background-color: rgba(0,0,0,0.35);" />

        <BorderPane prefWidth="720.0" prefHeight="520.0"
                    style="-fx-background-color: #C6DBEF; -fx-background-radius: 12;">

            <top>
                <HBox prefHeight="48.0"
                      alignment="CENTER_LEFT"
                      style="-fx-background-color: rgba(255,255,255,0.15); -fx-background-radius: 12 12 0 0;">
                    <padding>
                        <Insets top="10" right="12" bottom="10" left="16"/>
                    </padding>

                    <children>
                        <Label text="BADGES COLLECTION"
                               style="-fx-font-weight: bold; -fx-font-size: 13; -fx-text-fill: #2B2B2B;"/>

                        <Pane HBox.hgrow="ALWAYS"/>

                        <Button fx:id="btnCloseBadges"
                                text="âœ•"
                                onAction="#close"
                                style="-fx-background-color: transparent; -fx-font-size: 14; -fx-font-weight: bold;"/>
                    </children>
                </HBox>
            </top>

            <center>
                <ScrollPane fitToWidth="true"
                            style="-fx-background-color: transparent;"
                            hbarPolicy="NEVER">
                    <content>
                        <FlowPane fx:id="badgesGrid"
                                  hgap="18" vgap="18"
                                  prefWrapLength="660"
                                  style="-fx-padding: 18;"/>
                    </content>
                </ScrollPane>
            </center>

        </BorderPane>

    </children>
</StackPane>
