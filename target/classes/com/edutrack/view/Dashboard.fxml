<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane alignment="CENTER" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="com.edutrack.controller.DashboardController">
    <children>
        <ImageView fitHeight="1080.0" fitWidth="1920.0" preserveRatio="false">
            <image>
                <Image url="@background.png" />
            </image>
        </ImageView>
        
        <ScrollPane fitToWidth="true" style="-fx-background: transparent; -fx-background-color: transparent;">
            <content>
                <VBox alignment="TOP_CENTER" spacing="20.0" style="-fx-padding: 30;">
                    
                    <!-- Welcome Card -->
                    <HBox alignment="CENTER_LEFT" spacing="20.0" 
                          style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 25;">
                        <children>
                            <VBox spacing="5.0">
                                <Label fx:id="lblGreeting" text="Good Morning!" style="-fx-text-fill: #59B5E0;">
                                    <font><Font name="System Bold" size="28.0"/></font>
                                </Label>
                                <Label fx:id="lblUsername" text="Welcome back, User" style="-fx-text-fill: #666; -fx-font-size: 16;"/>
                            </VBox>
                            
                            <javafx.scene.layout.Region HBox.hgrow="ALWAYS"/>
                            
                            <!-- Streak -->
                            <VBox alignment="CENTER" spacing="5.0" 
                                  style="-fx-background-color: #fff3cd; -fx-background-radius: 15; -fx-padding: 15 25;">
                                <Label text="ðŸ”¥ Streak" style="-fx-font-size: 12; -fx-text-fill: #856404;"/>
                                <Label fx:id="lblStreak" text="0" style="-fx-text-fill: #856404;">
                                    <font><Font name="System Bold" size="24.0"/></font>
                                </Label>
                                <Label text="days" style="-fx-font-size: 11; -fx-text-fill: #856404;"/>
                            </VBox>
                            
                            <!-- Level & XP -->
                            <VBox alignment="CENTER" spacing="8.0" prefWidth="200.0"
                                  style="-fx-background-color: #d4edda; -fx-background-radius: 15; -fx-padding: 15;">
                                <Label fx:id="lblLevel" text="Level 1" style="-fx-text-fill: #155724;">
                                    <font><Font name="System Bold" size="18.0"/></font>
                                </Label>
                                <ProgressBar fx:id="xpProgressBar" prefWidth="160.0" progress="0.3"/>
                                <Label fx:id="lblXpProgress" text="30/100 XP" style="-fx-font-size: 11; -fx-text-fill: #155724;"/>
                            </VBox>
                        </children>
                    </HBox>
                    
                    <!-- Main Content Row -->
                    <HBox spacing="20.0" alignment="TOP_CENTER">
                        <children>
                            <!-- Left Column -->
                            <VBox spacing="20.0" prefWidth="600.0" HBox.hgrow="ALWAYS">
                                
                                <!-- Today's Tasks -->
                                <VBox spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 20;" VBox.vgrow="ALWAYS">
                                    <HBox alignment="CENTER_LEFT">
                                        <Label text="ðŸ“‹ Today's Tasks" style="-fx-text-fill: #59B5E0;">
                                            <font><Font name="System Bold" size="18.0"/></font>
                                        </Label>
                                        <javafx.scene.layout.Region HBox.hgrow="ALWAYS"/>
                                        <Button text="View All" onAction="#goToTasks"
                                                style="-fx-background-color: transparent; -fx-text-fill: #59B5E0; -fx-font-size: 12;"/>
                                    </HBox>
                                    <ListView fx:id="taskListView" prefHeight="200.0" 
                                              style="-fx-background-color: transparent;"/>
                                </VBox>
                                
                                <!-- Upcoming Events -->
                                <VBox spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 20;">
                                    <Label text="ðŸ“… Upcoming Events" style="-fx-text-fill: #59B5E0;">
                                        <font><Font name="System Bold" size="18.0"/></font>
                                    </Label>
                                    <VBox fx:id="eventsBox" spacing="8.0">
                                    </VBox>
                                </VBox>
                            </VBox>
                            
                            <!-- Right Column -->
                            <VBox spacing="20.0" prefWidth="500.0">
                                
                                <!-- Statistics -->
                                <VBox spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 20;">
                                    <Label text="ðŸ“Š This Week's Progress" style="-fx-text-fill: #59B5E0;">
                                        <font><Font name="System Bold" size="18.0"/></font>
                                    </Label>
                                    
                                    <HBox spacing="20.0" alignment="CENTER">
                                        <VBox alignment="CENTER" spacing="5.0" 
                                              style="-fx-background-color: #e3f2fd; -fx-background-radius: 12; -fx-padding: 15;">
                                            <Label fx:id="lblTasksCompleted" text="0" style="-fx-text-fill: #1976d2;">
                                                <font><Font name="System Bold" size="28.0"/></font>
                                            </Label>
                                            <Label text="Tasks Done" style="-fx-font-size: 11; -fx-text-fill: #1976d2;"/>
                                        </VBox>
                                        
                                        <VBox alignment="CENTER" spacing="5.0"
                                              style="-fx-background-color: #fce4ec; -fx-background-radius: 12; -fx-padding: 15;">
                                            <Label fx:id="lblStudyHours" text="0h" style="-fx-text-fill: #c2185b;">
                                                <font><Font name="System Bold" size="28.0"/></font>
                                            </Label>
                                            <Label text="Study Time" style="-fx-font-size: 11; -fx-text-fill: #c2185b;"/>
                                        </VBox>
                                        
                                        <VBox alignment="CENTER" spacing="5.0"
                                              style="-fx-background-color: #e8f5e9; -fx-background-radius: 12; -fx-padding: 15;">
                                            <Label fx:id="lblGoalsReached" text="0" style="-fx-text-fill: #388e3c;">
                                                <font><Font name="System Bold" size="28.0"/></font>
                                            </Label>
                                            <Label text="Goals Met" style="-fx-font-size: 11; -fx-text-fill: #388e3c;"/>
                                        </VBox>
                                    </HBox>
                                </VBox>
                                
                                <!-- Task Completion Chart -->
                                <VBox spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 20;">
                                    <Label text="Task Status" style="-fx-text-fill: #59B5E0;">
                                        <font><Font name="System Bold" size="18.0"/></font>
                                    </Label>
                                    <PieChart fx:id="taskPieChart" prefHeight="200.0" legendVisible="false"/>
                                    <HBox alignment="CENTER" spacing="20.0">
                                        <HBox alignment="CENTER_LEFT" spacing="5.0">
                                            <javafx.scene.shape.Circle radius="6.0" fill="#28a745"/>
                                            <Label text="Completed" style="-fx-font-size: 11; -fx-text-fill: #333333;"/>
                                        </HBox>
                                        <HBox alignment="CENTER_LEFT" spacing="5.0">
                                            <javafx.scene.shape.Circle radius="6.0" fill="#ffc107"/>
                                            <Label text="Pending" style="-fx-font-size: 11; -fx-text-fill: #333333;"/>
                                        </HBox>
                                        <HBox alignment="CENTER_LEFT" spacing="5.0">
                                            <javafx.scene.shape.Circle radius="6.0" fill="#dc3545"/>
                                            <Label text="Overdue" style="-fx-font-size: 11; -fx-text-fill: #333333;"/>
                                        </HBox>
                                    </HBox>
                                </VBox>
                                
                                <!-- Recent Activity -->
                                <VBox spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 20;">
                                    <Label text="ðŸ• Recent Activity" style="-fx-text-fill: #59B5E0;">
                                        <font><Font name="System Bold" size="18.0"/></font>
                                    </Label>
                                    <VBox fx:id="activityBox" spacing="8.0">
                                    </VBox>
                                </VBox>
                            </VBox>
                        </children>
                    </HBox>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</StackPane>
