<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/25"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="project.EditBioController"
           fx:id="overlayRoot"
           prefWidth="1200.0"
           prefHeight="680.0">

    <children>

        <Pane prefWidth="1200.0" prefHeight="680.0"
              style="-fx-background-color: rgba(0,0,0,0.35);" />

        <VBox prefWidth="650.0" prefHeight="420.0"
              spacing="12.0"
              style="-fx-background-color: #C6DBEF; -fx-background-radius: 12;">
            <padding>
                <Insets top="16.0" right="16.0" bottom="16.0" left="16.0"/>
            </padding>

            <HBox alignment="CENTER_RIGHT">
                <Button fx:id="btnClose" text="✕"
                        onAction="#close"
                        style="-fx-background-color: transparent; -fx-font-size: 14; -fx-font-weight: bold;"/>
            </HBox>

            <TextArea fx:id="txtBio"
                      promptText="Text to update your bio..."
                      wrapText="true"
                      prefHeight="300.0"
                      style="-fx-background-radius: 10; -fx-font-size: 13;"/>

            <HBox alignment="CENTER_RIGHT" spacing="10.0">
                <Button fx:id="btnSave" text="✓"
                        onAction="#save"
                        style="-fx-background-color: #59B5E0; -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold; -fx-background-radius: 20; -fx-padding: 6 14;"/>
            </HBox>
        </VBox>

    </children>
</StackPane>
