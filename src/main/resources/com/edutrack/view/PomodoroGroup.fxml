<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane alignment="CENTER" prefHeight="900.0" prefWidth="1920.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.edutrack.controller.PomodoroController">
   <children>
      <ImageView fitHeight="1080.0" fitWidth="1920.0" preserveRatio="false">
         <image>
            <Image url="@background.png" />
         </image>
      </ImageView>
      
      <VBox alignment="TOP_CENTER" maxWidth="1753.0" prefHeight="1020.0" prefWidth="1753.0" style="-fx-background-color: #ffffff; -fx-background-radius: 20;">
         <StackPane.margin>
            <Insets bottom="30.0" top="30.0" />
         </StackPane.margin>
         <padding>
            <Insets bottom="40.0" left="50.0" right="50.0" top="40.0" />
         </padding>
         
         <children>
            <!-- Title -->
            <Label style="-fx-text-fill: #59B5E0;" text="Group Study Session">
               <font>
                  <Font name="System Bold" size="32.0" />
               </font>
            </Label>
            
            <!-- Timer Display -->
            <Label fx:id="timerLabel" style="-fx-text-fill: #333;" text="25:00">
               <font>
                  <Font size="72.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" top="30.0" />
               </VBox.margin>
            </Label>
            
            <!-- Phase Label -->
            <Label fx:id="phaseLabel" style="-fx-text-fill: #666; -fx-font-size: 18;" text="Study Time" />
            
            <!-- Ready Count -->
            <Label fx:id="readyCountLabel" style="-fx-text-fill: #59B5E0; -fx-font-size: 16; -fx-font-weight: bold;" text="0/0 Ready">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Label>
            
            <!-- Group Status -->
            <Label fx:id="groupStatusLabel" style="-fx-text-fill: #888; -fx-font-size: 14;" text="Waiting for members to be ready...">
               <VBox.margin>
                  <Insets bottom="20.0" top="5.0" />
               </VBox.margin>
            </Label>
            
            <!-- Members List -->
            <Label style="-fx-font-weight: bold; -fx-font-size: 16; -fx-text-fill: #333333;" text="Group Members">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Label>
            
            <ScrollPane fitToWidth="true" prefHeight="200.0" style="-fx-background: transparent; -fx-background-color: transparent;">
               <content>
                  <VBox fx:id="membersListBox" spacing="8.0" style="-fx-padding: 10;">
                  </VBox>
               </content>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </ScrollPane>
            
            <!-- Buttons -->
            <HBox alignment="CENTER" spacing="30.0">
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
               <children>
                  <Button fx:id="startTimerButton" onAction="#startGroupTimerAsOwner" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-background-radius: 20; -fx-padding: 10 30; -fx-font-size: 14;" text="Start Timer" />
                  
                  <Button fx:id="stopTimerButton" onAction="#stopGroupTimerAsOwner" style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-background-radius: 20; -fx-padding: 10 30; -fx-font-size: 14;" text="Stop Timer" />
                  
                  <Button fx:id="readyButton" onAction="#toggleReady" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-background-radius: 20; -fx-padding: 10 30; -fx-font-size: 14;" text="Ready" />
                  
                  <Button onAction="#openSettingsFromGroup" style="-fx-background-color: #59B5E0; -fx-text-fill: white; -fx-background-radius: 20; -fx-padding: 10 25;" text="Timer Settings" />
                  
                  <Button onAction="#backToStartPomodoro" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-background-radius: 20; -fx-padding: 10 25;" text="Back" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</StackPane>
