<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>

<BorderPane stylesheets="@../../../../style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.edutrack.controller.LoginController">
    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 20; -fx-background-color: #2c3e50;">
            <VBox alignment="CENTER" spacing="15" maxWidth="350" styleClass="card">
                <Label styleClass="label-header" text="EduTrack" style="-fx-font-size: 32px; -fx-text-fill: #3498db;"/>
                <Label text="Student Productivity Platform" style="-fx-text-fill: #7f8c8d;"/>
                
                <Label fx:id="statusLabel" text="" textFill="red"/>
                
                <TextField fx:id="usernameField" promptText="Username" />
                <PasswordField fx:id="passwordField" promptText="Password" />
                
                <Button styleClass="button-primary" text="Login" maxWidth="Infinity" onAction="#handleLogin"/>
                <Button style="-fx-background-color: transparent; -fx-text-fill: #3498db; -fx-underline: true; -fx-cursor: hand;" text="Create an Account" onAction="#handleRegister"/>
            </VBox>
        </VBox>
    </center>
</BorderPane>
